<div class="loginForm d-grid s-padding">
    <h1>Register</h1>

    <div class="formContainer d-grid s-padding">
        <form id="registerForm" class="d-grid s-padding" style="gap: 1rem;">
            <label>Avatar</label>
            <input type="file" name="avatar">
            <label>Nombre</label>
            <input name="name">
            <label>Email</label>
            <input name="email">
            <label>Password</label>
            <input type="password" name="password" id="firstPassword">
            <label>Confirmar password</label>
            <input type="password" name="confirmPassword" id="secondPassword">
            <span id="validationText" class="hidden">* los passwords no coiciden</span>
            <label>Direccion</label>
            <input type="text" name="address">
            <label>Edad</label>
            <input type="number" name="age">
            <label>Tel√©fono</label>
            <input type="number" name="phone">
            <input type="submit" id="submitButton">
        </form>

        <a href="/login" class="formButtonRegister">Volver al inicio</a>
    </div>
</div>
