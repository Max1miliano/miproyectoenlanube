<div>
   {{> navbar}}
   <h1>Bienvenido al admin de tu negocio</h1>

   <h2>Qué vas a hacer?</h2>

   <div>
      <h3>Agregar un producto a mi negocio</h3>
      <div>
         <form id="productForm">
            <label>Título</label>
            <input name="title">
            <label>Precio</label>
            <input type="number" name="price">
            <label>Descripción</label>
            <input name="description">
            <label>Categoría</label>
            <input name="category">
            <label>Stock</label>
            <input name="stock">
            <label>Imagen</label>
            <input type="file" name="image">
            <input type="submit">
         </form>
      </div>
   </div>
   <div>
      <h3>Borrar un producto de mi negocio</h3>
      <div>
         <form id="deleteProduct">
            <label>Id del producto</label>
            <input type="text" name="idProduct" placeholder="Id de base de datos">
            <input type="submit" value="Borrar producto">
         </form>
      </div>
   </div>
   <div>
      <h3>Modificar un producto de mi negocio</h3>
      <div>
         <form id="updateProductForm">
            <label>Id del producto</label>
            <input type="text" name="idProduct">
            <label>Título</label>
            <input name="title">
            <label>Precio</label>
            <input type="number" name="price">
            <label>Descripción</label>
            <input name="description">
            <label>Categoría</label>
            <input name="category">
            <label>Stock</label>
            <input name="stock">
            <label>Imagen</label>
            <input type="file" name="image">
            <input type="submit">
         </form>
      </div>
   </div>
</div>

<script src="/js/addProductToDatabase.js"></script>