<div>
   {{> navbar}}

   <h1 class="s-padding">Bienvenido a tu carrito {{this.datosDelUsuario.name}}</h1>

   <div class="detailContainer">

      <div class="cartContainer">

         {{#if productListCart}}
         <div id="cart-container-items" class="itemsCartList gridColumnFlow">
            {{#each productListCart}}
            <div>
               <li>{{this.productTitle}}</li>
               <li>{{this.productPrice}}</li>
               <button class="add-cart-button xs-padding">Borrar</button>
            </div>
            {{/each}}
         </div>

         <button id="buyItems">Enviar solicitud de compra</button>
         {{else}}

         <p>El carrito aún está vacío</p>
         {{/if}}
      </div>

      <div class="profile-container-items" class="profileContainer">
         <h4>Tus Datos personales</h4>
         <div class="informationValues gridColumnFlow">
            <label>Name</label>
            <p>{{this.name}}</p>
         </div>
         <div class="informationValues gridColumnFlow">
            <label>Email</label>
            <p>{{this.email}}</p>
         </div>
         <div class="informationValues gridColumnFlow">
            <label>Age</label>
            <p>{{this.age}}</p>
         </div>
         <div class="informationValues gridColumnFlow">
            <label>Phone</label>
            <p>{{this.phone}}</p>
         </div>
         <div class="informationValues gridColumnFlow">
            <label>Address</label>
            <p>{{this.address}}</p>
         </div>

      </div>
   </div>
</div>

<script src="/js/generarPedido.js"></script>