<div>
   {{> navbar}}

   <h1 class="s-padding">Bienvenido a tu carrito {{convertDataUser.name}}</h1>
   <p class="s-padding">Fecha de tu pedido: {{date}}</p>

   <div class="detailContainer">

      <div class="cartContainer">

         {{#if productListCart}}
         <div id="cart-container-items" class="itemsCartList gridColumnFlow">
            {{#each productListCart}}
            <div class="cartItem">
               <li id="productIdFromCart" style="display: none;">{{this._id}}</li>
               <li>{{this.productTitle}}</li>
               <li>{{this.productPrice}}</li>
               <button id="deleteProductFromCart" class="add-cart-button xs-padding">Borrar</button>
            </div>
            {{/each}}
         </div>

         <button id="buyItems">Enviar solicitud de compra</button>
         {{else}}
         <p>El carrito aún está vacío</p>
         {{/if}}
      </div>

      <div class="profile-container-items" class="profileContainer">
         <h4>Tus Datos personales</h4>
         <div class="informationValues gridColumnFlow">
            <label>Name</label>
            <p>{{convertDataUser/name}}</p>
         </div>
         <div class="informationValues gridColumnFlow">
            <label>Email</label>
            <p>{{convertDataUser.email}}</p>
         </div>
         <div class="informationValues gridColumnFlow">
            <label>Address</label>
            <p>{{convertDataUser.address}}</p>
         </div>

      </div>
   </div>
</div>

<script src="/js/generarPedido.js"></script>